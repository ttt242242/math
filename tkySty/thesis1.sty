\makeatletter
\newdimen\vspace@title
%
\def\thesistype#1{\gdef\@thesistype{#1}}
\def\etitle#1{\gdef\@etitle{#1}}
\def\eauthor#1{\gdef\@eauthor{#1}}
\def\teacher#1{\gdef\@teacher{#1}}
%
\vspace@title=0.14\textheight % space for title
%
\long\def\abstract#1{\def\@abstract{#1}}
\def\@abstract{}
\let\@oldmaketitle\@maketitle
%
\def\bigtitle{\par
 \begingroup
 \def\thefootnote{\fnsymbol{footnote}}%
 \def\@makefnmark{\hbox
 to\z@{$\m@th^{\@thefnmark}$\hss}}%
 \if@twocolumn
 \twocolumn[\@bigtitle]%
 \else \newpage
 \global\@topnum\z@
 \@bigtitle \fi\thispagestyle{plain}\@thanks
 \endgroup
 \setcounter{footnote}{0}%
 \let\bigtitle\relax
 \let\@bigtitle\relax
}
%
\def\@bigtitle{\newpage\null
 \vbox to \vspace@title
 {
 \vspace{2cm}
 \begin{center} 
 {\large \@thesistype} \\
 \vspace{2cm}
 {\LARGE \@title} \\
 \vspace{1cm}
 {\large \@author} \\
 \vspace{3cm}
 {\Large \@etitle} \\
 \vspace{1cm}
 {\large \@eauthor} \\
 \vspace{4cm}
 {\large 提出年月日 \@date} \\
 \vspace{3cm}
 {\large \@teacher} \\
 \end{center}}
}

\def\maketitle{\par
 \begingroup
 \def\thefootnote{\fnsymbol{footnote}}%
 \def\@makefnmark{\hbox
 to\z@{$\m@th^{\@thefnmark}$\hss}}%
 \if@twocolumn
 \twocolumn[\@maketitle]%
 \else \newpage
 \global\@topnum\z@
 \@maketitle \fi\thispagestyle{plain}\@thanks
 \endgroup
 \setcounter{footnote}{0}%
 \let\maketitle\relax
 \let\@maketitle\relax
}
\def\@maketitle{
 \vbox to \vspace@title
 {\begin{center}
 {\LARGE \@title} \\
 \vspace{1cm}
 {\Large \@author} \\
 \vspace{1cm}
 {\LARGE \@etitle} \\
 \vspace{1cm}
 {\Large \@eauthor} \\
 \end{center}
 }
 \vskip 4cm
 \vbox{
 \leftline{\bfseries\abstractname}%
 \begin{quotation}\@abstract\end{quotation}%
 \vskip 1cm
 }
}
